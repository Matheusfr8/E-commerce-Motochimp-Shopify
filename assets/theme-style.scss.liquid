//Popup Cart
.popup_cart{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  display: table;
  height: 100%;
  width: 100%;
  z-index: -1;
  transform: translateY(50px);
  @include transition (all 0.3s ease-in-out 0s);
  .popup_bg{    
    position: absolute;
    height: calc(100% + 202px);
    top: -101px;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    background: #050608;
    z-index: -1;
    opacity: 0;
    visibility: hidden;
    @include transition(all 300ms ease-in-out);
  }

  .popup_content{    
    display: table-cell;
    vertical-align: middle;
    width: 100%;
    opacity: 0;
    max-height: calc(100% - 202px);
    visibility: hidden;
    @include transition(all 100ms ease-in-out); 
    .container{
      position: relative;
      z-index: 99;
      text-align: center;
    }
  }

  &.active{
    z-index: 690; transform: translateY(0px);
    .popup_bg{      
      z-index: 90;
      opacity: 1;
      visibility: visible;
    }
    .popup_content{
      z-index: 90;
      opacity: 1;          
      visibility: visible;
    }
    .popup_close{
      opacity: 1;       
      z-index: 99;
      #{$right}: 0;
      top: 0;
      background: $main-color;
      width: 25px;
      height: 25px;
      line-height: 22px;
      text-align: center;
      &:hover{
        background: darken($main-color,10%)
      }
    }
  }

  &.active{
    .popup_bg{
      background-color: rgba(0, 0, 0, .75);
    }
  }
  .popup_close{
    #{$right}: 0px;
    position: absolute;
    z-index: -1;
    opacity: 0;
    @include transition(all 300ms ease-in-out);
  }
  svg.icon-close{
    fill: #fff;
    height: 20px;
    width: 20px;
  }  
  .popup_inner{
