      .modal-body {padding: 30px;}
    }

    @media (min-width: 1023px){
      .cart-popup-left{    
        display: -ms-flexbox;
        display: flex;
        padding:0;
      }
      .cart-popup-info{padding-top: 30px ;}
    }


    .product-image{margin-bottom:10px;}
    .cart-popup-imgbottom{text-align:center; width:100%; margin: 20px 0;  font-size: 14px;}
    .previewCartCheckout-price{    
