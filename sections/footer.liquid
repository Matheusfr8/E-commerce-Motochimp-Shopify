
<footer data-section-id="{{ section.id }}" data-section-type="header-section" class="site-footer clearfix">
  {% include 'footer-1' %}
</footer>


{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Layout"
    },
	{
      "type": "header",
      "content": "Footer Top Setting"
    },
	{
      "type": "checkbox",
      "id": "footer_top_enable",
      "label": "Enable Footer Top",
      "default": true
    },

	
	{
      "type": "header",
      "content": "Footer Center Setting"
    },
	{
      "type": "checkbox",
      "id": "footer_center_enable",
      "label": "Enable Footer Center?",
      "default": true
    },
	{
      "type": "color",
      "id": "bg_headercenter",
      "label": "BG Header Center",
      "default": "#fff"
    },
	{
      "type": "header",
      "content": "Footer Center Column 1"
    },
	{
      "type": "checkbox",
      "id": "enable_logo_footer",
      "label": "Enable Footer Logo?",
      "default": true
    },
    {
        "type": "image_picker",
        "id": "logo_footer",
        "label": "Logo Footer"
    },
    {
      "type": "checkbox",
      "id": "footer_co1_enable",
      "label": "Enable ?",
      "default": true
    },
	{
      "type": "text",
      "id": "footer_title_1",
      "label": "Column 1 Title",
      "default": "your title"
    },
	{
      "type": "checkbox",
      "id": "footer_newleter_enable",
      "label": "Enable Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_news",
      "label": "Title Newsletter",
      "default": "SUBCRIBLE FOR NEWSLETTER"
    },
    {
      "type": "header",
      "content": "Footer Center Column 2"
    },
    {
      "type": "checkbox",
      "id": "footer_co2_enable",
      "label": "Enable",
      "default": true
    },
	{
      "type": "text",
      "id": "footer_title_2",
      "label": "Column 2 Title",
	  "default": "your title"
    },
	{
      "type": "link_list",
      "id": "footer_linklist_2",
      "label": "Footer Column 2"
    },
    {
      "type": "header",
      "content": "Footer Center Column 3"
    },
    {
      "type": "checkbox",
      "id": "footer_co3_enable",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_3",
      "label": "Column 3 Title",
      "default": "your title"
    },
    {
      "type": "link_list",
      "id": "footer_linklist_3",
      "label": "Footer Column 3"
    },
    {
      "type": "header",
      "content": "Footer Center Column 4"
    },
    {
      "type": "checkbox",
      "id": "footer_co4_enable",
      "label": "Enable ?",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_title_4",
      "label": "Column 4 Title",
      "default": "your title"
    },
    {
      "type": "link_list",
      "id": "footer_linklist_4",
      "label": "Footer Column 4"
    },

	{
      "type": "header",
      "content": "Footer Bottom Setting"
    },
    {
      "type": "checkbox",
      "id": "show_bottom",
      "label": "Enable Footer Bottom?",
      "default": true
    },
	{
      "type": "color",
      "id": "bg_headerbottom",
      "label": "BG Header Bottom",
      "default": "#232f3e"
    },
	{
      "type": "header",
      "content": "Footer CopyRight"
    },
    {
      "type": "textarea",
      "id": "footer_copyright",
      "label": "Footer About"
    },    
	{
      "type": "checkbox",
      "id": "footer_show_social",
      "label": "Enable Social?",
      "default": true
    }
  ]
}
{% endschema %}

