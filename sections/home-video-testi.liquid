},
{
"type": "header",
"content": "Owl Settings"
},
{
"type": "checkbox",
"id": "owl_navigation",
"label": "Show navigation",
"default": true
},
{
"type": "checkbox",
"id": "show_dot",
"label": "Show dot",
"default": true
},
{
"type": "text",
"id": "owl_margin",
"label": "Margin Item",
